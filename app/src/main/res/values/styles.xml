<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="authLogoStyle">
        <item name="android:layout_width">@dimen/auth_logo_width</item>
        <item name="android:layout_height">@dimen/auth_logo_height</item>
        <item name="android:layout_marginTop">@dimen/auth_logo_margin_top</item>
    </style>

    <style name="authTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/auth_margin_start</item>
        <item name="android:layout_marginTop">@dimen/auth_title_margin_top</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="authInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/auth_margin_start</item>
        <item name="android:layout_marginTop">@dimen/auth_input_layout_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/auth_margin_end</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="authTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="authTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>